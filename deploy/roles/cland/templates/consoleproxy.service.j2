[Unit]
Description=libvirt console proxy service
After=network.target

[Service]
Type=simple
ExecStart=/opt/libvirt-console-proxy/build/virtconsoleproxyd --resolver-mode external --resolver-uri http://127.0.0.1:5005/consoleresolver --listen-tls-ca /opt/libvirt-console-proxy/cert/cacert.pem --listen-tls-cert /opt/libvirt-console-proxy/cert/servercert.pem --listen-tls-key /opt/libvirt-console-proxy/cert/serverkey.pem --listen-addr 127.0.0.1:9443 --connect-insecure
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
